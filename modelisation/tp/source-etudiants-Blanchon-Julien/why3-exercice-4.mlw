module Somme

  use int.Int
  use int.ComputerDivision
  use ref.Refint

  let somme (n: int) : int
    requires { 0<n }
    ensures  { let r = result in 2*(r) = n*(n+1)}
  =
    let i = ref 0 in
    let r = ref 0 in
    while  (!i < n) do
      invariant { 2*(!r) = (!i)*((!i)+1) && 0<=(!i)<=n }
      variant   { n - (!i) }
      i := (!i) + 1;
      r :=  (!r) + (!i)
    done;
    !r

end
